<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <style name="NoActionBarTheme" parent="@style/AppTheme">
        <item name="android:windowTitleSize">0.0dip</item>
        <item name="android:windowActionBar">false</item>
    </style>
    
    <style name="WhiteActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#ffffff</item>
        <item name="android:backgroundStacked">#ffffff</item>
        <item name="android:backgroundSplit">#ffffff</item>
    </style>
    
    <!-- Tab选项标签的样式 -->
    <style name="MyActionBarTabStyle" parent="android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:divider">@null</item>
        <item name="android:paddingLeft">22dp</item>
        <item name="android:paddingRight">22dp</item>
    </style>

    <!-- Tab选项标签字体的样式 -->
    <style name="MyActionBarTabTextStyle" parent="android:style/Widget.Holo.Light.ActionBar.TabText">        
        <item name="android:textColor">#000000</item>
    </style>
    
    <!-- TabBar选项标签字体的样式 -->
    <style name="MyActionBarTabBarStyle" parent="android:style/Widget.Holo.Light.ActionBar.TabBar">        
        <item name="android:background">#000000</item>
    </style>
    
    <style name="MyTheme" parent="@android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/WhiteActionBar</item>
    </style>

    <style name="Widget" />

    <style name="Widget.ProgressBar" parent="@style/Widget">
        <item name="android:maxWidth">48.0dip</item>
        <item name="android:maxHeight">48.0dip</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:minWidth">48.0dip</item>
        <item name="android:minHeight">48.0dip</item>
    </style>
    
    <style name="PopUpWindow" parent="Widget">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:minHeight">48.0dip</item> 
    </style>

    <style name="AccountBoxValue">
        <item name="android:textSize">@dimen/my_account_stat_font_size</item>
        <item name="android:textColor">@color/umano_edit_text</item>
    </style>

    <style name="AccountUserName">
        <item name="android:textSize">@dimen/my_account_name_font_size</item>
        <item name="android:textColor">@color/umano_edit_text</item>
    </style>

    <style name="AccountBoxHeader">
        <item name="android:textSize">@dimen/channel_header_font_size</item>
        <item name="android:textColor">@color/umano_edit_text</item>
    </style>

    <style name="ClipDetailHeaders">
        <item name="android:textSize">@dimen/clip_detail_headers_font_size</item>
        <item name="android:textColor">@color/umano_clip_detail_labels</item>
    </style>

    <style name="Widget.ProgressBar.Vertical" parent="@style/Widget.ProgressBar">
        <item name="android:maxWidth">4.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@*android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/download_progressbar</item>
        <item name="android:minWidth">1.0dip</item>
    </style>

    <style name="PremiumFeatureTitle">
        <item name="android:textSize">@dimen/premium_feature_font_size</item>
        <item name="android:textColor">@*android:color/black</item>
    </style>

    <style name="PremiumFeatureDescription">
        <item name="android:textSize">@dimen/premium_feature_text_font_size</item>
        <item name="android:textColor">@color/umano_edit_text</item>
    </style>

    <style name="SmallButton">
        <item name="android:textSize">@dimen/small_button_font_size</item>
        <item name="android:textColor">@*android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <style name="SmallButtonGray" parent="@style/SmallButton">
        <item name="android:background">@drawable/button_small_gray</item>
    </style>
    <style name="SmallButtonOrange" parent="@style/SmallButton">
        <item name="android:background">@drawable/button_small_orange</item>
    </style>
	<style name="LargeButton">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@*android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/standard_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/action_bar_height</item>
        <item name="android:textIsSelectable">false</item>
    </style>
    
    <style name="LargeButtonOrange" parent="@style/LargeButton">
        <item name="android:background">@drawable/button_orange</item>
    </style>
    <style name="Widget.Sherlock.ProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/abs__progress_medium_holo</item>
        <item name="android:animationResolution">33</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <style name="HeaderText">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@color/umano_edit_text</item>
    </style>
    
    <style name="StepCircle">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@*android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/circle_orange</item>
        <item name="android:layout_width">30.0dip</item>
        <item name="android:layout_height">30.0dip</item>
        <item name="android:textIsSelectable">false</item>
    </style>
    
    <style name="PageText">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/umano_edit_text</item>
    </style>

</resources>
