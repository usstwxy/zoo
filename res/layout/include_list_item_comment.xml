<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5.0dip"
    android:paddingBottom="5.0dip">
    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="@dimen/clip_expanded_face_size"
        android:layout_height="@dimen/clip_expanded_face_size"
        android:layout_marginLeft="@dimen/standard_margin"
        android:layout_marginRight="5.0dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/placeholder_user_circle"
        android:contentDescription="@string/app_name"
        android:duplicateParentState="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/user_icon"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="5.0dip"
        android:text="伍凯"
        android:textColor="@color/umano_clip_expanded_social_text"
        android:textSize="14.0sp" />
    
    <TextView
        android:id="@+id/comment_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/user_icon"
        android:layout_below="@id/user_name"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="5.0dip"
        android:text="这个活动跟屎一样"
        android:textColor="@color/umano_clip_expanded_social_text"
        android:textSize="14.0sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/comment_text"
        android:layout_below="@+id/comment_text"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image1"
            android:layout_width="@dimen/clip_standard_image_size"
            android:layout_height="@dimen/clip_standard_image_size"
            android:background="@drawable/placeholder_small"
            android:contentDescription="@string/app_name"
            android:duplicateParentState="true"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="@dimen/clip_standard_image_size"
            android:layout_height="@dimen/clip_standard_image_size"
            android:layout_marginLeft="@dimen/standard_margin"
            android:background="@drawable/placeholder_small"
            android:contentDescription="@string/app_name"
            android:duplicateParentState="true"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="@dimen/clip_standard_image_size"
            android:layout_height="@dimen/clip_standard_image_size"
            android:layout_marginLeft="@dimen/standard_margin"
            android:layout_marginRight="@dimen/standard_margin"
            android:background="@drawable/placeholder_small"
            android:contentDescription="@string/app_name"
            android:duplicateParentState="true"
            android:scaleType="centerCrop" />
    </LinearLayout>

</RelativeLayout>

