<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_playlist_add_remove"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <View
        android:layout_width="0.5dip"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/standard_margin"
        android:layout_marginRight="@dimen/action_bar_height"
        android:layout_marginTop="@dimen/standard_margin"
        android:background="@color/umano_divider" />
 
    <ImageButton
        android:id="@+id/btn_playlistadd"
        android:layout_width="@dimen/action_bar_height"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/white_button_selector_transparent"
        android:contentDescription="@string/app_name"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:src="@drawable/ic_playlistadd"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/btn_playlistremove"
        android:layout_width="@dimen/action_bar_height"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/white_button_selector_transparent"
        android:contentDescription="@string/app_name"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:src="@drawable/ic_playlistremove"
        android:visibility="invisible" />
</RelativeLayout>