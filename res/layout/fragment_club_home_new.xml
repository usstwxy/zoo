<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/premium_scrollview" android:background="@color/umano_container_background" android:layout_width="fill_parent" android:layout_height="fill_parent" android:overScrollMode="never" android:overScrollHeader="@null" android:overScrollFooter="@null"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:animateLayoutChanges="true">
        <FrameLayout android:layout_width="fill_parent" android:layout_height="150.0dip">

            <ImageView
                android:id="@+id/image"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:contentDescription="@string/app_name"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:scaleType="centerCrop"
                android:src="@drawable/user_bg" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/standard_margin"
                android:paddingBottom="2.0dip" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/standard_margin"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/placeholder_user_circle" />

                <!-- <TextView
                    android:id="@+id/lbl_premium_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="伍凯"
                    android:textColor="@android:color/white"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/clip_detail_title_font_size" /> -->

                <TextView
                    android:id="@+id/lbl_premium_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="吉他社，专业拨弦100年"
                    android:textColor="@android:color/white"
                    android:textIsSelectable="false"
                    android:textSize="16.0sp" />

            </LinearLayout>
        </FrameLayout>
        <TextView
            android:id="@+id/lbl_premium_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:focusableInTouchMode="false"
            android:gravity="left"
            android:paddingBottom="@dimen/standard_margin"
            android:paddingLeft="@dimen/standard_margin"
            android:paddingRight="@dimen/standard_margin"
            android:paddingTop="@dimen/standard_margin"
            android:text="通知"
            android:textColor="@color/umano_edit_text"
            android:textIsSelectable="false"
            android:textSize="16.0sp" />

        <LinearLayout android:orientation="vertical" android:background="@color/umano_light_gray" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="5.0dip" android:layout_marginRight="5.0dip" android:layout_marginBottom="5.0dip">

            <TextView
                android:id="@+id/lbl_premium_summary"
                style="@style/PremiumFeatureTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_marginRight="@dimen/standard_margin"
                android:layout_marginTop="@dimen/standard_margin"
                android:drawableLeft="@drawable/icon_premium_summary"
                android:drawablePadding="@dimen/standard_margin"
                android:text="未读消息" />

            <TextView
                android:id="@+id/lbl_premium_summary_description"
                style="@style/PremiumFeatureDescription"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/standard_margin"
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_marginRight="@dimen/standard_margin"
                android:layout_marginTop="5.0dip"
                android:paddingLeft="30.0dip"
                android:text="被10+人跟风\n有3个社团发起新投票" />

            <View android:background="@color/umano_divider" android:layout_width="fill_parent" android:layout_height="0.5dip" />
        </LinearLayout>

        <TextView
            android:id="@+id/lbl_premium_features"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:focusableInTouchMode="false"
            android:gravity="left"
            android:paddingBottom="@dimen/standard_margin"
            android:paddingLeft="@dimen/standard_margin"
            android:paddingRight="@dimen/standard_margin"
            android:paddingTop="5.0dip"
            android:text="管理"
            android:textColor="@color/umano_edit_text"
            android:textIsSelectable="false"
            android:textSize="16.0sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:background="@color/umano_light_gray"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lbl_premium_sleep"
                style="@style/PremiumFeatureTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_marginRight="@dimen/standard_margin"
                android:layout_marginTop="@dimen/standard_margin"
                android:drawableLeft="@drawable/icon_premium_sleep"
                android:drawablePadding="@dimen/standard_margin"
                android:text="活动备忘" />

            <TextView
                android:id="@+id/lbl_premium_sleep_description"
                style="@style/PremiumFeatureDescription"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/standard_margin"
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_marginRight="@dimen/standard_margin"
                android:layout_marginTop="5.0dip"
                android:paddingLeft="30.0dip"
                android:text="明天将在体育场举办运动会，别忘了参加哦" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/umano_divider" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:background="@color/umano_light_gray" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="5.0dip" android:layout_marginRight="5.0dip" android:layout_marginBottom="5.0dip">

            <TextView
                android:id="@+id/lbl_premium_unlimited"
                style="@style/PremiumFeatureTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_marginRight="@dimen/standard_margin"
                android:layout_marginTop="@dimen/standard_margin"
                android:drawableLeft="@drawable/icon_premium_unlimited"
                android:drawablePadding="@dimen/standard_margin"
                android:text="随笔分享" />

            <TextView
                android:id="@+id/lbl_premium_unlimited_description"
                style="@style/PremiumFeatureDescription"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/standard_margin"
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_marginRight="@dimen/standard_margin"
                android:layout_marginTop="5.0dip"
                android:paddingLeft="30.0dip"
                android:text="草稿中有1篇随笔\n有2个社团邀请发表随笔" />

            <View android:background="@color/umano_divider" android:layout_width="fill_parent" android:layout_height="0.5dip" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>